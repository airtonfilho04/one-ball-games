<p id="notice"><%= notice %></p>

<div>
<% if admin_signed_in? %>
    Welcome <%=  current_admin.email %>
    <%= link_to "Sign out", destroy_admin_session_path, :method => :delete %>
<% end %>
</div>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Platforms</th>
      <th>Genres</th>
      <th>Publishers</th>
      <th>Developers</th>
      <th>Release date</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.description.truncate(100) %></td>
        <td><%= game.platforms %></td>
        <td><%= game.genres %></td>
        <td><%= game.publishers %></td>
        <td><%= game.developers %></td>
        <td><%= game.release_date %></td>
        <td><%= game.score %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
